{
  "name": "@devoxa/i18next-test",
  "description": "Check `i18next` locale files for missing translations and common errors",
  "version": "3.0.1",
  "main": "dist/src/index.js",
  "bin": {
    "i18next-test": "dist/src/bin.js"
  },
  "license": "MIT",
  "repository": {
    "url": "https://github.com/devoxa/i18next-test"
  },
  "scripts": {
    "test": "jest",
    "format": "prettier --ignore-path='.gitignore' --list-different --write .",
    "format:check": "prettier --ignore-path='.gitignore' --check .",
    "lint": "eslint '{src,tests}/**/*.ts'",
    "build": "rm -rf dist/ && tsc && chmod +x dist/src/bin.js",
    "preversion": "yarn build"
  },
  "prettier": "@devoxa/prettier-config",
  "dependencies": {
    "colors": "1.4.0",
    "commander": "12.1.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@devoxa/eslint-config": "4.0.2",
    "@devoxa/prettier-config": "2.0.3",
    "@swc/core": "1.15.11",
    "@swc/jest": "0.2.39",
    "@types/jest": "29.5.14",
    "@types/node": "20.9.5",
    "eslint": "9.39.3",
    "jest": "29.7.0",
    "prettier": "3.8.1",
    "typescript": "5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "20.9.0"
  }
}
